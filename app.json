{
  "expo": {
    "name": "FrontAegis",
    "slug": "FrontAegis",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/aegis.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSContactsUsageDescription": "This app uses your contacts to let you pick emergency contacts."
      }
    },
    "android": {
      "permissions": [
        "READ_CONTACTS"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/aegis.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/aegis.png"
    },
    "plugins": [
      "expo-router",
      "expo-contacts",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/aegis.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-secure-store",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
